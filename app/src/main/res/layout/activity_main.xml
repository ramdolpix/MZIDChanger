<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/changeID2GlobalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickChangeID2Global"
        android:text="@string/change_ID_Global"
        app:layout_constraintBottom_toTopOf="@+id/changeID2ChinaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deviceInfoButton" />

    <Button
        android:id="@+id/changeID2ChinaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickChangeID2China"
        android:text="@string/change_ID_China"
        app:layout_constraintBottom_toTopOf="@+id/infoViewer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeID2GlobalButton" />

    <Button
        android:id="@+id/deviceInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickDeviceInfo"
        android:text="@string/device_info"
        app:layout_constraintBottom_toTopOf="@+id/changeID2GlobalButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoViewer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeID2ChinaButton" />
</androidx.constraintlayout.widget.ConstraintLayout>